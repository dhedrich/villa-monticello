<section class="service-sec first-sec" id="services">
    <div class="container hidden2" style="opacity:0;">
        <div class="row section-heading">
            <div class="col-md-8">
                <div class="heading">
                    <h2>
                        <small>We'd Love To Hear From You</small>Contact Us</h2>
                    <hr>
                </div>
            </div>
            <div class="col-md-4 section-heading-img">
                <img class="img-fluid service-logo" src="./img/Main Logo PNG.png" alt="">
            </div>
        </div>
        <div class="row">
            <div class="col-md-8 form-container">
                <form>
                    <div class="form-group">
                        <label for="contactName">Name</label>
                        <input type="text" class="form-control" id="contactName" placeholder="John Doe">
                    </div>
                    <div class="form-group">
                        <label for="contactEmail">Email</label>
                        <input type="email" class="form-control" id="contactEmail" aria-describedby="emailHelp"
                            placeholder="johndoe@gmail.com">
                        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone
                            else.</small>
                    </div>
                    <div class="form-group">
                        <label for="contactMessage">Message</label>
                        <textarea class="form-control" rows="3" id="contactMessage"></textarea>
                    </div>
                    <button id="submit" type="submit" class="btn btn-aqua btn-capsul">Submit</button>
                </form>
            </div>
            <div class="col-md-2"></div>
            <div class="col-md-2"></div>
        </div>

    </div>
</section>